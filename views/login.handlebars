<h2 align="center">Enter your login info.</h2>
<form align="center" class="form-horizontal" role="form" action="/log?form=login" method="POST">
	<input type="hidden" name="_csrf" value="{{csrf}}">
	<div class="form-group">
	<div class="form-group">
		<label for="fieldPass" class="col-sm-2 control-label">Password:</label>
		<div class="col-sm-4">
			<input type="password" class="form-control" required id="fieldPass" name="pass">
		</div>
	</div>
	<div class="form-group">
		<label for="fieldEmail" class="col-sm-2 control-label">Email:</label>
		<div class="col-sm-4">
			<input type="text" class="form-control" required id="fieldEmail" name="email">
		</div>
	</div>
  <div class="form-group">
		<div class="col-sm-offset-2 col-sm-4">
			<button type="submit" class="btn btn-default">Login!</button>
		</div>
	</div>
</form>
